<div>
    <div class="shorten-header">
        <div class="content">
            <h1>Shorten URL</h1>
            <div class="inputs">
                <input placeholder="Enter URL here to shorten" name="urlInput" id="urlInput">
                <button id="submit">Submit</button>
            </div>
        </div>
    </div>
    <div>
        <table id="urlTable" class="urlTable">
            {{#each this}}
                <tr>
                    <td><a target="_blank" href="/r/{{this.fullURL}}">{{this.shortUrl}}</a></td>
                    <td id="{{this.shortUrl}}-count">{{this.count}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
</div>